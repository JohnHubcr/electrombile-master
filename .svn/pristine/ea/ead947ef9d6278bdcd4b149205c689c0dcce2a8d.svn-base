 */
public interface HomePageView extends BaseView {

    /**
     * 退出程序
     */
    void exit();

    /**
     * 退出登录
     */
    void logout();

    /**
     * 更新保险状态
     *
     * @param protectionStatus
     */
    void updateProtectionStatus(int protectionStatus);

    /**
     * 更新紧急联系人状态
     *
     * @param urgentContact
     */
    void updateUrgentContact(String urgentContact);

    /**
     * 防止按钮重复提交
     *
     * @param view
     */
    void setViewBuffered(View view);

    /**
     * 提醒是否退出
     */
    void showExitMessage();
}
