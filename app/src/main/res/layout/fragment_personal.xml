    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/transparent"/>

    <LinearLayout
        android:id="@+id/ll_motor_archives"
        style="@style/BigButtonStyle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:src="@drawable/moto_mine"/>

        <ImageView
            android:id="@+id/iv_message_point"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/small_red_dot"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="@dimen/module_common_padding">


            <TextView
                android:id="@+id/tv_motor_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆信息"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正呈电动"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_motor_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="红Max"
                android:textColor="#9a9a9a"
                android:textSize="13sp"
                android:visibility="gone"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_exclusive_service"
        style="@style/BigButtonStyle"
        android:layout_marginTop="@dimen/common_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:src="@drawable/vip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="专属服务"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_insurance_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/little_padding"
            android:text="未激活"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting"
        style="@style/BigButtonStyle"
        android:layout_marginTop="@dimen/common_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:src="@drawable/set"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_weight="1"
            android:paddingRight="@dimen/little_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_setting_point"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/small_red_dot"/>

        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"/>

    </LinearLayout>
</LinearLayout>