<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_login"
              android:orientation="vertical">

    <include
        android:id="@+id/in_head"
        layout="@layout/include_top_head_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:paddingLeft="@dimen/common_padding"
        android:layout_marginTop="@dimen/big_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:text="新密码"
            android:textColor="@color/base_text_color_tint_grey"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_new"
            style="@style/CommonButtonPswEditTextViewStyle"
            android:hint="请输入新密码"
            android:paddingLeft="@dimen/small_padding"
            android:textColor="@color/base_text_color_gray"
            android:textColorHint="@color/base_text_color_gray"></EditText>

        <ImageView
            android:id="@+id/iv_new_close"
            style="@style/BaseEditTextClearStyle"
            android:paddingRight="@dimen/common_padding"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin">

        <include
            layout="@layout/include_separate_white_view"></include>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:paddingLeft="@dimen/common_padding"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:text="确认密码"
            android:textColor="@color/base_text_color_tint_grey"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_again"
            style="@style/CommonButtonPswEditTextViewStyle"
            android:hint="请再次输入新密码"
            android:paddingLeft="@dimen/small_padding"
            android:textColor="@color/base_text_color_gray"
            android:textColorHint="@color/base_text_color_gray"></EditText>

        <ImageView
            android:id="@+id/iv_again_close"
            style="@style/BaseEditTextClearStyle"
            android:paddingRight="@dimen/common_padding"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin">

        <include
            layout="@layout/include_separate_white_view"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_submit"
        style="@style/GradientButtonStyle"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>