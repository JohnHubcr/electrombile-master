<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/little_padding"
              android:orientation="vertical">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/little_margin"
        android:gravity="center_vertical"
        android:text="声光寻车指令已发送！"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@null"
        android:paddingRight="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:text="手机号"
            android:textColor="@color/base_text_color_black"/>

        <EditText
            android:id="@+id/et_mobile_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入手机号"
            android:background="@null"
            android:textSize="12sp"
            android:paddingLeft="@dimen/small_padding"
            android:textColorHint="@color/base_text_color_grey"/>

        <ImageView
            android:id="@+id/iv_old_show"
            style="@style/BaseEditTextPswShowOrHideStyle"
            android:paddingRight="@dimen/common_padding"
            android:paddingTop="@dimen/common_padding"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>