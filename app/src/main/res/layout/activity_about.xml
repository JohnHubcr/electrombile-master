<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_base_bg"
              android:orientation="vertical">

    <include
        android:id="@+id/in_head"
        layout="@layout/include_top_head_back"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_about"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本: V"
            android:textColor="#9a9a9a"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9a9a9a"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_guide"
        style="@style/CommonButtonStyle"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/CommonButtonLeftTextViewStyle"
            android:text="功能介绍"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"/>
    </LinearLayout>

    <include
        layout="@layout/include_separate_transparent_view"></include>

    <LinearLayout
        android:id="@+id/ll_agreements"
        style="@style/CommonButtonStyle">

        <TextView
            style="@style/CommonButtonLeftTextViewStyle"
            android:text="用户协议"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"/>
    </LinearLayout>

    <include
        layout="@layout/include_separate_transparent_view"></include>

    <LinearLayout
        android:id="@+id/ll_follow"
        style="@style/CommonButtonStyle">

        <TextView
            android:id="@+id/tv_follow"
            style="@style/CommonButtonLeftTextViewStyle"
            android:text="@string/app_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"/>
    </LinearLayout>

    <include
        layout="@layout/include_separate_transparent_view"></include>

    <LinearLayout
        android:id="@+id/ll_hot_line"
        style="@style/CommonButtonStyle">

        <TextView
            style="@style/CommonButtonLeftTextViewStyle"
            android:text="拨打客服电话"/>

        <TextView
            android:id="@+id/tv_hot_line"
            style="@style/CommonButtonRightTextViewStyle"
            android:paddingRight="@dimen/little_padding"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"/>
    </LinearLayout>


</LinearLayout>