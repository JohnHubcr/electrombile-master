<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/fragment_base_bg"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_alarm"
        style="@style/BigButtonStyle"
        android:layout_height="69dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/warning" />

            <ImageView
                android:id="@+id/iv_alarm_point"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/small_red_dot" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="报警通知"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_alarm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="2016-10-9 15:26"
                    android:textColor="@color/translucent"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_alarm_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="车辆侧翻！请及时查看您的爱车！"
                android:textColor="#9a9a9a"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:id="@+id/ll_message"
        style="@style/BigButtonStyle"
        android:layout_height="69dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/system_messages" />

            <ImageView
                android:id="@+id/iv_message_point"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/small_red_dot"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="系统消息"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="2016-9-16 10:03"
                    android:visibility="invisible"
                    android:textColor="@color/translucent"></TextView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="电动车秋季新品发布，快来围观~"
                android:textColor="#9a9a9a"
                android:visibility="gone"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>