<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_start</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/bg_start</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MainTabBottom">
        <!--<item name="android:textColor">@color/b_text_color_selector</item>-->

        <item name="android:ellipsize">marquee</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">0sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Dialog.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/dialog_frame_bg</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ActionSheetStyle">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="titleButtonBackground">@drawable/dialog_common_shape_top</item>
        <item name="cancelButtonBackground">@drawable/dialog_common_shape_bottom</item>
        <item name="otherButtonTopBackground">@drawable/dialog_common_shape_middle</item>
        <item name="otherButtonMiddleBackground">@drawable/dialog_common_shape_middle</item>
        <item name="otherButtonBottomBackground">@drawable/dialog_common_shape_middle</item>
        <item name="otherButtonSingleBackground">@drawable/dialog_common_shape_middle</item>
        <item name="titleButtonTextColor">@color/ios_text_color_grey</item>
        <item name="cancelButtonTextColor">@color/ios_text_color_blue_dark</item>
        <item name="otherButtonTextColor">@color/ios_text_color_grey</item>
        <item name="actionSheetPadding">14dp</item>
        <item name="actionTitlePadding">18dp</item>
        <item name="actionCancelPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">15sp</item>
        <item name="actionSheetTitleTextSize">18sp</item>
        <item name="actionSheetCancelTextSize">16sp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GridPasswordView"/>

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="HeadTitleRightTextViewStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingRight">@dimen/common_padding</item>
        <item name="android:gravity">center|right</item>
        <item name="android:textColor">@color/title_text_color_selector</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="BaseTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/translucent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextViewStyle" parent="BaseTextViewStyle">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="BaseTextViewDescStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_text_color_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseTextButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/translucent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseClearStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/delete</item>
    </style>

    <style name="BaseEditTextClearStyle" parent="BaseClearStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="BaseEditTextPswShowOrHideStyle" parent="BaseClearStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/psw_eye_selector</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bulge_border_bg_selector</item>
        <item name="android:paddingLeft">@dimen/module_common_padding</item>
        <item name="android:paddingRight">@dimen/module_common_padding</item>
    </style>

    <style name="GradientButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_shape_shadow</item>
        <item name="android:layout_marginLeft">@dimen/module_common_padding</item>
        <item name="android:layout_marginRight">@dimen/module_common_padding</item>
    </style>

    <style name="CommonButtonBaseTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CommonButtonLeftTextViewStyle" parent="CommonButtonBaseTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CommonButtonRightTextViewStyle" parent="CommonButtonBaseTextViewStyle">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/translucent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CommonButtonEditTextViewStyle" parent="CommonButtonBaseTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/translucent</item>
        <item name="android:maxLength">20</item>
        <item name="android:ems">20</item>
    </style>

    <style name="CommonButtonPswEditTextViewStyle" parent="CommonButtonEditTextViewStyle">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="BigButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bulge_border_bg_selector</item>
        <item name="android:paddingLeft">@dimen/module_common_padding</item>
        <item name="android:paddingRight">@dimen/module_common_padding</item>
    </style>

    <style name="ActivateConfirmBaseTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textColor">@color/base_text_color_grey</item>
    </style>

    <style name="ActivateConfirmTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textColor">@color/base_text_color_grey</item>
    </style>


    <!--自定义dialog背景全透明无边框theme -->
    <style name="PointDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NumberProgressBar_Default">
